/***********************************************************************
// Array initialization| array traversing| taking input into array | printing array
//Array addition,Substraction,Multiplication
***********************************************************************/

#include <iostream>
using namespace std;
int main()
{
    int a[3];
    int b[3];
    int add[3],sub[3],mul[3];
    
    cout << "enter the elements of array A: " << endl;
    for(int i=0;i<3;i++)
    {
       cin >> a[i];
    }
    cout << "enter the elements of array B: " << endl;
    for(int i=0;i<3;i++)
    {
       cin >> b[i];
    }
    cout << endl <<"Addition of array A & B is:" << endl;
    for(int i=0;i<3;i++)
    {
        add[i]=a[i]+b[i];
        cout << add[i] <<" ";
    }
     cout << endl <<"Substraction of array A & B is:" << endl;
    for(int i=0;i<3;i++)
    {
        add[i]=a[i]-b[i];
        cout << add[i] <<" ";
    }
     cout << endl <<"Multiplication of array A & B is:" << endl;
    for(int i=0;i<3;i++)
    {
        add[i]=a[i]*b[i];
        cout << add[i] <<" ";
    }

    return 0;
}
